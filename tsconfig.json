{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "removeComments": true,
        "target": "ES5",
        "module": "ESNext",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
    },
    "include": ["./src"],
}